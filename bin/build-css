#!/bin/bash
# Build CSS script for Kimi Proxy Dashboard
# Compile TailwindCSS from input.css to tailwind.css

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_DIR="$(dirname "$SCRIPT_DIR")"

cd "$PROJECT_DIR"

echo "ðŸŽ¨ Building TailwindCSS..."

# Check if node_modules exists
if [ ! -d "node_modules" ]; then
    echo "ðŸ“¦ Installing dependencies..."
    npm install
fi

# Build CSS
npm run build:css

echo "âœ… CSS built successfully: static/css/tailwind.css"
